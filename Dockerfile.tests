FROM php:8.2-cli

# System deps for wp-tests + mysql client
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    git \
    subversion \
    unzip \
    wget \
    default-mysql-client \
  && rm -rf /var/lib/apt/lists/*

# WordPress tests need mysqli
RUN docker-php-ext-install mysqli

# Pin phpunit to a version compatible with PHP 8.2 (override with build arg)
ARG PHPUNIT_VERSION=9.6.20
ENV PHPUNIT_VERSION=${PHPUNIT_VERSION}
RUN curl -fsSL "https://phar.phpunit.de/phpunit-${PHPUNIT_VERSION}.phar" -o /usr/local/bin/phpunit \
  && chmod +x /usr/local/bin/phpunit \
  && phpunit --version

# Composer for pulling PHPUnit Polyfills at runtime
RUN curl -fsSL https://getcomposer.org/installer -o /tmp/composer-setup.php \
  && php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer \
  && rm /tmp/composer-setup.php

WORKDIR /app
