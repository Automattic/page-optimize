<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite>
			<directory prefix="integration_test_" suffix=".php">./tests/</directory>
			<directory prefix="unit_test_" suffix=".php">./tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
